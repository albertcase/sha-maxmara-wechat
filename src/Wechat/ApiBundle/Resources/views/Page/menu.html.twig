{% extends 'ADPWechatBundle:Manage:base.html.twig' %}
{% block title %}ADP MENU{% endblock %}
{% block navmenu %}active{% endblock %}

{% block maincontent %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Menu List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="menutable">
                        <thead>
                            <tr>
                                <th>Menu Name</th>
                                <th>Belong to</th>
                                <th>Menu Event</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                      {% for x in menus %}
                            <tr class="odd gradeX" menuid="{{ x.id|e }}">
                                <td>{{ x.menuName|e }}</td>
                                <td>{{ x.belongto|e }}</td>
                                <td>{{ x.eventtype|e }}</td>
                                <td class="center"><i class="fa fa-edit fa-lg"></i></td>
                                <td class="center"><i class="fa fa-trash-o fa-lg"></i></td>
                            </tr>
                      {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<div style="text-align:center;" id="menufun">
  <button type="button" class="btn btn-primary addmainmenu">Add Menu</button>
  <button type="button" class="btn btn-primary addsubmenu">Add Submenu</button>
  <button type="button" class="btn btn-success publish">Publish</button>
</div>


